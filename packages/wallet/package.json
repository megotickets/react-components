{
  "name": "@megotickets/wallet",
  "version": "1.0.0",
  "private": false,
  "description": "Web3 wallet integration components for MegoTickets React components library",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.tsx --format cjs,esm --dts --external react --inject-style --tsconfig tsconfig.json",
    "dev": "tsup src/index.tsx --format cjs,esm --dts --external react --inject-style --watch --tsconfig tsconfig.json",
    "prepublishOnly": "pnpm build"
  },
  "keywords": ["react", "components", "wallet", "web3", "ethereum", "megotickets"],
  "author": "MegoTickets",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/megotickets/react-components.git",
    "directory": "packages/wallet"
  },
  "homepage": "https://github.com/megotickets/react-components#readme",
  "bugs": {
    "url": "https://github.com/megotickets/react-components/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@megotickets/core": "workspace:core",
    "@rainbow-me/rainbowkit": "^2.0.0",
    "@tanstack/react-query": "^5.0.0",
    "axios": "^1.7.7",
    "encoding": "^0.1.13",
    "ethers": "^6.13.4",
    "lokijs": "^1.5.12",
    "pino-pretty": "^10.0.0",
    "viem": "^2.0.0",
    "wagmi": "^2.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "tsup": "^8.0.1",
    "typescript": "^5.0.0"
  }
}